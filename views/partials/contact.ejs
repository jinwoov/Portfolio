<form method="post" name=”contact_form” action="/contact" role="form" id="contact-me">
    <fieldset>
        <% if(thankYou === true) { %>
            <p id="thank-you">Thank you!</p>
            <% } %>
        <h2>Contact me</h2>
        <div id="container-box">
        <section class="input-field">
        <div>
            <input type="text" name="name" id="namepost" placeholder="Name" required />
        </div>
        <div>
            <input type="email" name="email" id="emailpost" placeholder="Email" required />
        </div>
         </section>
        <div>
            <textarea id="content-post" type="textarea" id="message" name="message" placeholder="Message" maxlength="140" rows="7" required></textarea>                
        </div>
    </div>
        <button type="submit">Send</button>
    </fieldset>
</form>
