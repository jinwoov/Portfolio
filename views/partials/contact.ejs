<form method="post" name=”contact_form” action="/contact" role="form">
    <fieldset>
        <% if(thankYou === true) { %>
            <p id="thank-you">Thank you!</p>
            <% } %>
        <h2>Contact me</h2>
        <div>
            <span>Name</span>
            <input type="text" name="name" id="namepost" placeholder="Name" required />
        </div>
        <div>
            <span>Email</span>
            <input type="text" name="email" id="emailpost" placeholder="Email" pattern="/^\w+(\S)\w+\@\w+\.(com|net|org)\b/" required />
        </div>
        <div>
            <span>Message</span>
            <textarea id="content-post" type="textarea" id="message" name="message" placeholder="Message" maxlength="140" rows="7" required></textarea>                
        </div>
        <button type="submit">Send</button>
    </fieldset>
</form>
